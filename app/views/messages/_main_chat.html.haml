.chat-main
  .chat-main__group-info
    .group-info
      .group-info__left
        .group-info__left--top
          = @group.name
        .group-info__left--bottom
          Member:
          - @group.users.each do |user|
            = user.name
      = link_to edit_group_path(@group), class: "group-info__right" do
        Edit
  .chat-main__message-list
    = render @messages
  .chat-main__message-form
    .message-form
      = form_for [@group, @message] do |f|
        .new_message
          = f.text_field :content, class: 'text-area', placeholder: 'type amessage'
          .form__mask
            = f.label :image, class: 'form__mask--image' do
              = icon('fas', 'image', class: 'image-icon')
              = f.file_field :image, class: 'image-file'
          = f.submit 'Send', class: 'message-form__send-btn'